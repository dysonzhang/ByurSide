<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff5f5f5" >

    <include
        android:layout_gravity="top"
        layout="@layout/user_login_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|center"
        android:layout_marginBottom="40.0dip"
        android:layout_marginRight="30.0dip"
        android:src="@drawable/dis_about_logo" />

    <LinearLayout
        android:id="@id/edit_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="@dimen/title_height"
        android:orientation="vertical"
        android:paddingTop="10.0dip" >

        <EditText
            android:id="@id/edittext_user_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_textview_style"
            android:hint="@string/user_username"
            android:paddingLeft="5.0dip"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textCursorDrawable="@color/black"
            android:textSize="18.0sp" />

        <EditText
            android:id="@id/edittext_user_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:background="@drawable/back_textview_style"
            android:hint="@string/user_pwd"
            android:inputType="textPassword"
            android:paddingLeft="5.0dip"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textCursorDrawable="@color/black"
            android:textSize="18.0sp" />

        <Button
            android:id="@id/button_user_login"
            android:layout_width="fill_parent"
            android:layout_height="35.0dip"
            android:layout_marginTop="8.0dip"
            android:background="@drawable/back_submit_style"
            android:text="@string/user_enter"
            android:textColor="#ffffffff" />
    </LinearLayout>

</FrameLayout>