<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/whites"
    android:orientation="vertical" >

    <com.ysls.imhere.widget.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="20.0dip"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/ic_launcher120" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_title"
                    android:textColor="@color/gray_font"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="20.0dip"
                android:text="@string/about_intro"
                android:textColor="@color/gray_font"
                android:textSize="14.0sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="20.0dip"
                android:text="@string/about_tontact"
                android:textColor="@color/gray_font"
                android:textSize="14.0sp" />

            <TextView
                android:id="@id/about_textview_weibo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="3.0dip"
                android:text="@string/about_sina"
                android:textColor="@color/gray_font"
                android:textSize="16.0sp" />

            <TextView
                android:id="@id/about_textview_weixin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="3.0dip"
                android:clickable="true"
                android:text="@string/about_weixin"
                android:textColor="@color/gray_font"
                android:textSize="16.0sp" />
 
            
            <TextView
                android:id="@id/about_textview_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/dis_about_logo"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="10.0dip"
                android:text="@string/about_copyright"
                android:textColor="@color/gray_font"
                android:textSize="16.0sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>